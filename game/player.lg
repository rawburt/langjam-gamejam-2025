use std
use inventory
use sprites
use items

rec Player do
  sprite: Sprite
  pos: Vec2
  inventory: Inventory
end

def player_init() Player do
  var player: Player = Player(
    sprite: make_sprite(0, 24),
    pos: Vec2(x: 0, y: 0),
    inventory: Inventory(items: [])
  )

  ret player
end

def player_draw(player: Player) do
  render_tile(player.sprite, 8, 8)
end

def player_add_item_to_inventory(player: Player, item: Item) do
  inventory_add(player.inventory, item)
end
