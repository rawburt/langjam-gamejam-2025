use std

load "assets/classicrogue1.png" as TILE_IMAGE

var tiles: Texture = Texture(
  src: TILE_IMAGE,
  w: 224,
  h: 64
)

var water: Sprite = Sprite(
  texture: tiles,
  rect: Rect2(x: 0, y: 8, w: 8, h: 8)
)

var player: Sprite = Sprite(
  texture: tiles,
  rect: Rect2(x: 8, y: 40, w: 8, h: 8)
)

def draw() do
  render_sprite(water, 8, 8)
  render_sprite(water, 8, 16)
  render_sprite(water, 16, 8)
  render_sprite(water, 16, 16)
  render_sprite(player, 24, 64)
end
