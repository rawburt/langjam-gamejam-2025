use std

asset TILE_IMAGE = "assets/classicrogue1.png"

var tiles: Texture = Texture(
  src: TILE_IMAGE,
  w: 224,
  h: 64
)

var water: Sprite = Sprite(
  texture: tiles,
  rect: Rect(x: 0, y: 8, w: 8, h: 8),
  overlay: false,
  overlay_color: #ffffff
)

var player: Sprite = Sprite(
  texture: tiles,
  rect: Rect(x: 8, y: 40, w: 8, h: 8),
  overlay: false,
  overlay_color: #ffffff
)

def draw() do
  render_sprite(water, 8, 8)
  render_sprite(water, 8, 16)
  render_sprite(water, 16, 8)
  render_sprite(water, 16, 16)
  render_sprite(player, 24, 64)
end
