{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LG",
  "scopeName": "source.lg",
  "patterns": [
    { "include": "#comments" },
    { "include": "#useStatement" },
    { "include": "#keywords" },
    { "include": "#fieldDefinition" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#colors" },
    { "include": "#operators" },
    { "include": "#constants" },
    { "include": "#types" },
    { "include": "#functions" }
  ],
  "repository": {
    "useStatement": {
      "patterns": [
        {
          "name": "meta.import.lg",
          "match": "\\b(use)\\s+([a-z_][a-z0-9_/]*)\\b",
          "captures": {
            "1": { "name": "keyword.control.lg" },
            "2": { "name": "string.unquoted.import.lg" }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.lg",
          "match": "---.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lg",
          "match": "\\b(if|do|else|end|for|to|def|ret|rec|enum|match|when|break|use|in|cond)\\b"
        },
        {
          "name": "keyword.declaration.lg",
          "match": "\\b(var|const|asset)\\b"
        },
        {
          "name": "keyword.operator.lg",
          "match": "\\b(and|or)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lg",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lg",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.lg",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "colors": {
      "patterns": [
        {
          "name": "constant.other.color.lg",
          "match": "#[0-9a-fA-F]{6}\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.lg",
          "match": "(==|!=|<=|>=|&&|\\|\\||\\+|-|\\*|/|<|>|!|=)"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.lg",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "keyword.type.primitive.lg",
          "match": "\\b(int|bool|str|image|color)\\b(?!\\()"
        },
        {
          "name": "entity.name.type.lg",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "fieldDefinition": {
      "patterns": [
        {
          "name": "variable.other.field.lg",
          "match": "\\b[a-z_][a-z0-9_]*(?=\\s*:)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.lg",
          "match": "\\b[a-z_][a-z0-9_]*(?=\\()"
        }
      ]
    }
  }
}
